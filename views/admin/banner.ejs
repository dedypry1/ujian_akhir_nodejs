<%- include('../layout/adminheader') %>

<h2 class="page-title">banner Data</h2>
<a href="/admin/banner/add-banner" class="btn btn-primary">Add a new banner</a>
<br><br>

<% if(count > 0){ %>

	<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
		<div class="carousel-inner">
			<div class="carousel-item active justify-content-center">
				<img  src="/images/noimage.png" class="d-block" id="img_banner">
			</div>
				<% banner.forEach(function(banners){ %>
				<div class="carousel-item">
					<% if(banners.image == "") { %>
						<img  src="/images/noimage.png" class="d-block" id="img_banner">
					<% }else{ %>
						<img  src="/banner_images/<%= banners._id %>/<%= banners.image %>"class="d-block" id="img_banner">
					<% } %>
				</div>
			<% }); %>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
		  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
		  <span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
		  <span class="carousel-control-next-icon" aria-hidden="true"></span>
		  <span class="sr-only">Next</span>
		</a>
	  </div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>banner</th>
			<th>Price</th>
			<th>Category</th>
			<th>banner image</th>
			<th>Edit</th>
			<th>Delete</th>
		</tr>
	</thead>
	<tbody>
		<% banner.forEach(function(banners){ %>
			<tr>
				<td><%= banners.title %></td>
				<td><%= banners.price %></td>
				<td><%= banners.categories %></td>
				<td>
					<% if(banners.image == "") { %>
						<img id="noimage" src="/images/noimage.png">
					<% }else{ %>
						<img id="noimage" src="/banner_images/<%= banners._id %>/<%= banners.image %>">
					<% } %>
				</td>
				<td><a href="/admin/banner/edit-banner/<%= banners._id %>">Edit</a></td>
				<td><a href="/admin/banner/delete-banner/<%= banners._id %>" class="confirmDeletionBanner">Delete</a></td>
			</tr>
		<% }); %>
	</tbody>
</table>

<% }else{ %>
	<h3 class="text-center">Tidak ada data banner</h3>
<% } %>
<%- include('../layout/adminfooter') %>